<h4 class="text-center mt-4"> Tell us who you are! </h4>

<%= form_with(scope: :session, url: login_path, local: true, class: 'shadow p-3 mb-3 bg-info rounded') do |f| %>
  <div class="form-group row">
    <%= f.label 'username or Email', class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= f.text_field :username, class: 'form-control', placeholder: 'Enter your username or email' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :password, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= f.password_field :password, class: 'form-control', placeholder: 'Enter your password' %>
    </div>
  </div>

  <div class="form-group row col-10 justify-content-center">
    <%= f.submit value: 'Log in', class: 'btn btn-success btn-lg' %>
  </div>
<% end %>
