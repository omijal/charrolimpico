<%= render 'common/errors', obj: @user %>

<%= form_with(model: @user, local: true, class: 'shadow p-3 mb-3 bg-info rounded') do |f| %>
  <div class="form-group row">
    <%= f.label :username, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= f.text_field :username, class: 'form-control', placeholder: 'Set your username' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :email, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= f.text_field :email, class: 'form-control', placeholder: 'you@mail.com' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :password, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= f.password_field :password, class: 'form-control', placeholder: '****' %>
    </div>
  </div>

  <div class="form-group row col-10 justify-content-center">
    <%= f.submit value: button_label, class: 'btn btn-success btn-lg' %>
  </div>
<% end %>
