<h1 class="text-center mt-4">
  <%= @object.username %>'s profile
</h1>


<%= gravatar_for @object, class: 'rounded shadow mx-auto d-block' %>

<% if @object == current_user %>
  <p class="text-center mt-4">
    <%= link_to 'Edit Your Profile', edit_user_path(@object), class: 'btn btn-info' %>
  </p>
<% end %>
